# Note: see `man ssh_config` for details
Host my-ssh-alias1
    HostName 192.168.0.2
    User root
    Port 22
    IdentityFile ~/.ssh/id_rsa
Host my-ssh-alias2
    HostName whatever.something.com
    User my_username
    ForwardAgent yes
    AddKeysToAgent yes
    ForwardX11 yes
    ServerAliveInterval 120
    ServerAliveCountMax 2
